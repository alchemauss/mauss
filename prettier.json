{
	"$schema": "http://json.schemastore.org/prettierrc",
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"overrides": [
		{
			"files": ["package*.json"],
			"options": {
				"parser": "json",
				"useTabs": false
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"parser": "markdown",
				"tabWidth": 4,
				"useTabs": false
			}
		},
		{
			"files": ["*.y*ml"],
			"options": {
				"parser": "yaml",
				"singleQuote": false
			}
		}
	]
}
