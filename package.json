{
  "name": "mauss",
  "author": "Ignatius Bagus",
  "description": "Opinionated zero-dependency development kit",
  "version": "0.0.11",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "watch": "tsc -w",
    "test": "jest --verbose",
    "test:summary": "jest",
    "test:coverage": "jest --coverage",
    "lint": "run-p lint:**",
    "lint:code": "tsc --noEmit",
    "lint:style": "prettier -c src",
    "publish:clean": "git clean -dfx -e node_modules",
    "publish:build": "tsc -d --outDir .",
    "publish:format": "prettier -wu **/*.{d.ts,js}",
    "prepublishOnly": "run-s publish:**",
    "postpublish": "npm run publish:clean"
  },
  "exports": {
    ".": "./index.js",
    "./api": {
      "import": "./api/index.js"
    },
    "./bits": {
      "import": "./bits/index.js"
    },
    "./guards": {
      "import": "./guards/index.js"
    },
    "./math": {
      "import": "./math/index.js"
    },
    "./utils": {
      "import": "./utils/index.js"
    },
    "./web": {
      "import": "./web/index.js"
    },
    "./package.json": "./package.json",
    "./prettier.json": "./prettier.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": "./prettier.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmauss/mauss.git"
  },
  "bugs": {
    "url": "https://github.com/devmauss/mauss/issues"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.16",
    "@types/node-fetch": "^2.5.10",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
